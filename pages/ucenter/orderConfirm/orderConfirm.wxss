.orderDetails{
	background: #fff;
	border-bottom: 20rpx solid #f3f3f3;
}
.orderListTitle{
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListTitle .userImg{
	float: left;
	width: 70rpx;
	height: 70rpx;
	border-radius: 35rpx;
	margin:15rpx;
}
.orderListTitle .userImg image{
	border-radius: 35rpx;
	width: 100%;
	height: 100%;
}
.orderDetail{
  background: #fff;
	border-bottom: 20rpx solid #f3f3f3;
}
.orderListDetail{
	display: flex;
  flex-direction:row;
	height: 180rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderDetails{
  display: flex;
  flex-direction:row;
  overflow: hidden;
	background: #fff;
	border-bottom: 20rpx solid #f3f3f3;
}
.orderListTitle{
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #f3f3f3;
  overflow: hidden;
}
.orderListTitle .userName{
overflow: hidden;
}
.orderListTitle .userImg image{
	border-radius: 35rpx;
	width: 100%;
	height: 100%;
}
