.orderListTitle .orderStatus{
	float: right;
	margin-right: 20rpx;
	color: #2f7b27;
	font-size: 34rpx;
}
.orderListDetails{
	display: flex;
  flex-direction:row;
	height: 180rpx;
	border-bottom: 1rpx solid #f3f3f3;
  overflow: hidden;
}
.orderListDetails .productImg{

	height: 140rpx;
  width:120rpx;
	margin-top: 20rpx;
	margin-left: 20rpx;
}
.orderListDetails .productImg image{
	width: 100%;
	height: 100%;
}
.orderListDetails .productInfo{
	flex: 4;
	padding: 20rpx 30rpx;
}
.orderListDetails .productInfo .productTitle{
	overflow: hidden;
	text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.orderListDetails .productInfo .productQuantity{
	float: right;
}
.productCount{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.productCount>view{
	float: right;
	margin-right: 30rpx;
}
.btn{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction:row;
  position: fixed;
  bottom:0;
  border: 1rpx solid #636262;
}
.linetxt{
  color:red;
  line-height: 100rpx;
}