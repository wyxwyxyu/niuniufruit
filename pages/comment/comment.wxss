/* pages/comment/comment.wxss */

page {
    background:#f2f2f2;
    font-size:1em;
}
/*星星评价样式*/
.star-box{
  border-bottom:#eee solid 1px;
  padding:1em;
  background:#FFFFFF;
}
.star-title{
  margin-left:20rpx;
}

.star-pos {
    margin: 10rpx;
    display: flex;
    flex-direction: row;
}
 
.stars{
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
}
/*文本评价样式*/
.comment{
  margin-top: 30rpx;
  border-bottom:#eee solid 1px;
  padding:1em;
  background:#FFFFFF;
}
.comment_text{
  width: 100%;
  margin:0 auto;
  border:1px solid #ddd;
}
.comment_textarea{
  width: 100%;
}
.comment_textarea_counter{
  float:right;
}

/*上传图片样式*/
.weui-cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 17px;
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.weui-uploader__title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

.weui-uploader__info {
  color: #B2B2B2;
}


.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}


.weui-uploader__file {
  float: left;
  margin-right: 9px;
  margin-bottom: 9px;
}


.weui-uploader__img {
  display: block;
  width: 79px;
  height: 79px;
}

.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 77px;
  height: 77px;
}

.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.btn-box {
    padding:1em 2em;
}